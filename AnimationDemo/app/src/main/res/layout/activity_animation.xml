<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Animation.AnimationActivity">

    <Button
            android:id="@+id/animation_bu_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="通过代码"/>

    <Button
            android:id="@+id/animation_bu_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/animation_bu_1"
            android:layout_centerHorizontal="true"
            android:text="通过xml "/>

    <Button
            android:id="@+id/frame_animation"
            android:text="帧动画"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/animation_bu_2"
            android:layout_centerHorizontal="true"/>

    <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>